<?xml version="1.0" encoding="utf-8"?>

<net.bensdeals.views.SearchItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/block"
    android:padding="5dip"
    >
    <ImageView
        android:id="@+id/search_item_image"
        android:layout_height="80dip"
        android:layout_width="80dip"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_marginRight="10dip"/>
    <TextView
        android:id="@+id/search_item_title"
        style="@style/block"
        android:layout_toRightOf="@id/search_item_image"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/search_item_info"
        style="@style/block"
        android:layout_toRightOf="@id/search_item_image"
        android:layout_below="@id/search_item_title"
        android:layout_marginTop="5dip"
        />
</net.bensdeals.views.SearchItemView>