<?xml version="1.0" encoding="utf-8"?>
<net.bensdeals.views.DealItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill"
    android:id="@+id/container"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="5dip"
    >
    <net.bensdeals.views.RoundCornerImageView
        android:id="@+id/gallery_image"
        style="@style/fill_no_width"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:padding="15dip"
        />
    <net.bensdeals.views.RoundCornerScrollView
        style="@style/fill_no_width"
        android:layout_weight="1"
        android:layout_marginLeft="5dip"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >
        <ScrollView
            android:layout_height="0dip"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/gallery_text_container"
                style="@style/fill"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_text"
                    style="@style/block"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.1"
                    android:textColor="@color/solid_white"
                    android:layout_marginBottom="7dip"
                    />
                <TextView
                    style="@style/fill_no_height"
                    android:id="@+id/desc_text"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="@color/solid_white"
                    android:autoLink="web"
                    android:textColorLink="@color/light_navy_blue"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            style="@style/block"
            android:orientation="horizontal"
            android:layout_margin="1dip">
            <TextView
                android:id="@+id/deal_time_text"
                style="@style/fill_no_width"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/solid_white"
                />
            <ImageView
                android:id="@+id/share_button"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/ic_menu_share"/>
        </LinearLayout>
    </net.bensdeals.views.RoundCornerScrollView>
</net.bensdeals.views.DealItemView>